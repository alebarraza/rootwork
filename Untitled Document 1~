#include "TH2.h"

void rootprogram1(Char_t* name = "Pi0_mc_out_250.root") {
	Char_t* filename = Form("/home/alejandro/rootwork/%s", name);
	TFile *file1 = new TFile(filename);
	TTree *tree1 = (TTree*)file1->Get("h1");
	
	Float_t En_bm;

	tree1->SetBranchAddress("Energy", &En_bm);

	TH1D *a0 = new TH1D("En_bm","Energy of the Incoming Phonton Beam (GeV)", 1000, 0, 0.257);

	Int_t nentries = (Int_t)tree1->GetEntries();
	for (Int_t i = 0; i<nentries; i++) {
		
		tree1->GetEntry(i);
		a0->Fill(Energy);
	}

	canvas1->cd(1); a0->Draw();
} 









